public class Book
{
   
    private readonly string isbn;
 
    private string title;
    private string author;

    
    public Book(string isbn, string title, string author)
    {
        this.isbn = isbn;
        Title = title;
        Author = author;
    }

     
    public string Title
    {
        get { return title; }
        set { title = value; }
    }

    public string Author
    {
        get { return author; }
        set { author = value; }
    }

    
    public void DisplayInfo()
    {
        Console.WriteLine($"ISBN: {isbn}");
        Console.WriteLine($"Название: {Title}");
        Console.WriteLine($"Автор: {Author}");
    }
}

class Program
{
    static void Main()
    {

        Book book = new Book("978-5-0000-0000-0", "Война и мир", "Лев Толстой");


        book.DisplayInfo();



        Console.ReadLine();
    }
}
